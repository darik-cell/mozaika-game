extend type Query {
    puzzlePieces(gameSessionId: ID!): [PuzzlePiece]
}

extend type Mutation {
    newPuzzlePiece(gameSessionId: ID!, pieceNumber: Int!, correctPosition: CoordinatesInput!): PuzzlePiece
}

type PuzzlePiece {
    id: ID!
    pieceNumber: Int!
    correctPosition: Coordinates!
    currentPosition: Coordinates!
    isPlacedCorrectly: Boolean!
}

type Coordinates {
    x: Float!
    y: Float!
}

input CoordinatesInput {
    x: Float!
    y: Float!
}
